<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/spinnerHeader"
        android:text="Change applicant status : "
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerHeader"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/spinnerStatus"
        android:layout_marginBottom="10dp"
        ></Spinner>


<android.support.v7.widget.RecyclerView
    android:id="@+id/list"
    android:layout_below="@+id/spinnerStatus"
    android:name="com.quicsolv.insurance.fragments.ServerDataFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layoutManager="LinearLayoutManager"
    tools:context=".fragments.ServerDataFragment"
    tools:listitem="@layout/fragment_serverdata" />




</RelativeLayout>